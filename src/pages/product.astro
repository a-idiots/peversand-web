---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Product">
  <section class="page-content">
    <h1>Our Products</h1>
    <p>Explore what Peanut Butter Sandwich has to offer.</p>
  </section>
</Layout>

<style>
  .page-content {
    max-width: 800px;
    margin: 0 auto;
    padding: 4rem 2rem;
  }

  h1 {
    font-size: 2rem;
    font-weight: 300;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    margin-bottom: 1.5rem;
  }

  p {
    color: var(--color-text-light);
    line-height: 1.8;
  }
</style>
